import { Wallet, LayoutDashboard, Plus, List, Bell, Settings as SettingsIcon, LogOut, WifiOff, Wifi, X } from 'lucide-react';
import { User } from '../App';
import { Expense, AppSettings } from '../App';

type Screen = 'login' | 'dashboard' | 'add' | 'list' | 'alerts' | 'settings';

interface NavigationProps {
  currentScreen: Screen;
  onNavigate: (screen: Screen) => void;
  user: User;
  onLogout: () => void;
  isOnline: boolean;
  expenses: Expense[];
  settings: AppSettings;
  isDemoMode: boolean;
  onExitDemo: () => void;
}

export function Navigation({ currentScreen, onNavigate, user, onLogout, isOnline, expenses, settings, isDemoMode, onExitDemo }: NavigationProps) {
  const navItems = [
    { id: 'dashboard' as Screen, label: 'Dashboard', icon: LayoutDashboard },
    { id: 'add' as Screen, label: 'Add Expense', icon: Plus },
    { id: 'list' as Screen, label: 'Expenses', icon: List },
    { id: 'alerts' as Screen, label: 'Alerts', icon: Bell },
    { id: 'settings' as Screen, label: 'Settings', icon: SettingsIcon },
  ];

  // Check if there are any alerts
  const currentMonth = new Date().getMonth();
  const currentYear = new Date().getFullYear();
  const monthlyExpenses = expenses
    .filter(e => {
      const expenseDate = new Date(e.date);
      return expenseDate.getMonth() === currentMonth && expenseDate.getFullYear() === currentYear;
    })
    .reduce((sum, e) => sum + e.amount, 0);

  const hasAlert = monthlyExpenses > settings.expenditureLimit;

  return (
    <nav className="bg-white shadow-sm border-b border-gray-200">
      <div className="max-w-6xl mx-auto px-4">
        <div className="flex items-center justify-between h-16">
          {/* Logo */}
          <div className="flex items-center gap-2">
            <div className="w-10 h-10 bg-slate-600 rounded-lg flex items-center justify-center">
              <Wallet className="w-6 h-6 text-white" />
            </div>
            <div>
              <span className="text-gray-900">Expense Tracker</span>
              <div className="flex items-center gap-2">
                {isOnline ? (
                  <div className="flex items-center gap-1">
                    <Wifi className="w-3 h-3 text-emerald-500" />
                    <span className="text-gray-500">Online</span>
                  </div>
                ) : (
                  <div className="flex items-center gap-1">
                    <WifiOff className="w-3 h-3 text-amber-500" />
                    <span className="text-gray-500">Offline â€“ Data saved locally</span>
                  </div>
                )}
              </div>
            </div>
          </div>

          {/* Navigation Items */}
          <div className="hidden md:flex items-center gap-1">
            {navItems.map((item) => {
              const Icon = item.icon;
              const isActive = currentScreen === item.id;
              const showBadge = item.id === 'alerts' && hasAlert;
              return (
                <button
                  key={item.id}
                  onClick={() => onNavigate(item.id)}
                  className={`flex items-center gap-2 px-4 py-2 rounded-lg transition relative ${
                    isActive
                      ? 'bg-slate-100 text-slate-700'
                      : 'text-gray-600 hover:bg-gray-50'
                  }`}
                  data-onboarding={item.id === 'add' ? 'add-expense' : item.id === 'alerts' ? 'alerts' : undefined}
                >
                  <Icon className="w-5 h-5" />
                  <span>{item.label}</span>
                  {showBadge && (
                    <span className="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                  )}
                </button>
              );
            })}
          </div>

          {/* User Menu */}
          <div className="flex items-center gap-4">
            {isDemoMode && (
              <button
                onClick={onExitDemo}
                className="hidden sm:flex items-center gap-2 px-3 py-1.5 bg-amber-100 text-amber-700 rounded-lg hover:bg-amber-200 transition"
              >
                <X className="w-4 h-4" />
                <span>Exit Demo</span>
              </button>
            )}
            <div className="hidden sm:block text-right">
              <p className="text-gray-900">{user.name}</p>
              <p className="text-gray-500">{user.email}</p>
            </div>
            <button
              onClick={onLogout}
              className="flex items-center gap-2 px-4 py-2 text-gray-600 hover:bg-gray-50 rounded-lg transition"
              title="Logout"
            >
              <LogOut className="w-5 h-5" />
              <span className="hidden sm:inline">Logout</span>
            </button>
          </div>
        </div>

        {/* Mobile Navigation */}
        <div className="md:hidden flex gap-1 pb-2 overflow-x-auto">
          {isDemoMode && (
            <button
              onClick={onExitDemo}
              className="flex items-center gap-2 px-3 py-2 bg-amber-100 text-amber-700 rounded-lg hover:bg-amber-200 transition whitespace-nowrap"
            >
              <X className="w-4 h-4" />
              <span>Exit Demo</span>
            </button>
          )}
          {navItems.map((item) => {
            const Icon = item.icon;
            const isActive = currentScreen === item.id;
            const showBadge = item.id === 'alerts' && hasAlert;
            return (
              <button
                key={item.id}
                onClick={() => onNavigate(item.id)}
                className={`flex items-center gap-2 px-3 py-2 rounded-lg whitespace-nowrap transition relative ${
                  isActive
                    ? 'bg-slate-100 text-slate-700'
                    : 'text-gray-600 hover:bg-gray-50'
                }`}
              >
                <Icon className="w-4 h-4" />
                <span>{item.label}</span>
                {showBadge && (
                  <span className="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                )}
              </button>
            );
          })}
        </div>
      </div>
    </nav>
  );
}
